{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "warn",
				"useFlatMap": "error",
				"noExcessiveCognitiveComplexity": {
					"level": "warn",
					"options": {
						"maxAllowedComplexity": 20
					}
				}
			},
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error",
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUndeclaredDependencies": "off"
			},
			"style": {
				"useConst": "error",
				"useTemplate": "warn",
				"noNonNullAssertion": "warn",
				"useExportType": "error",
				"useImportType": "error",
				"useNodejsImportProtocol": "error",
				"noDefaultExport": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noArrayIndexKey": "warn",
				"noConsole": "warn"
			},
			"a11y": {
				"recommended": true,
				"noAccessKey": "error",
				"useButtonType": "error",
				"useAltText": "error",
				"useValidAnchor": "error"
			},
			"performance": {
				"noAccumulatingSpread": "warn",
				"noBarrelFile": "off",
				"noReExportAll": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf",
		"attributePosition": "auto"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"quoteProperties": "asNeeded"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": false
		},
		"globals": []
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 100,
			"lineEnding": "lf"
		},
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 100,
			"lineEnding": "lf",
			"quoteStyle": "double"
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/build",
			"!**/.next",
			"!**/coverage",
			"!**/*.min.js",
			"!**/*.min.css",
			"!**/pnpm-lock.yaml",
			"!**/package-lock.json"
		]
	}
}
